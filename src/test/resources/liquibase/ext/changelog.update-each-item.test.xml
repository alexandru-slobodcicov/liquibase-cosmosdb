<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="alex">
        <comment>Create container</comment>

        <ext:createContainer containerName="container1"/>

    </changeSet>

    <changeSet id="2" author="alex">

        <comment>Insert three items</comment>

        <ext:createItem containerName="container1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "1",
                    "changedField" : "Will be Changed1",
                    "remainedField" : "Remains Same1",
                    "onlyIn1Field" : "Remains Only1",
                    "partition" : "default"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

        <ext:createItem containerName="container1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "2",
                    "changedField" : "Will be Changed2",
                    "remainedField" : "Remains Same2",
                    "onlyIn2Field" : "Remains Only2",
                    "partition" : "default"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

        <ext:createItem containerName="container1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "3",
                    "changedField" : "Value Unchanged",
                    "remainedField" : "Remains Same3",
                    "onlyIn3Field" : "Remains Only3",
                    "partition" : "default"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

    </changeSet>

    <changeSet id="3" author="alex">

        <comment>Update each item by id</comment>

        <ext:updateEachItem containerName="container1">

            <ext:query>
                <!-- @formatter:off -->
                {
                    "query" : "SELECT * FROM c WHERE c.id &lt;= @id",
                    "parameters" : [
                        {
                            "name" : "@id",
                            "value" : "2"
                        }
                    ]
                }
                <!-- @formatter:on -->
            </ext:query>

            <ext:document>
                <!-- @formatter:off -->
                {
                    "changedField" : "Value Changed",
                    "addedField" : "Added Value"
                }
                <!-- @formatter:on -->
            </ext:document>

        </ext:updateEachItem>

    </changeSet>

    <changeSet id="4" author="alex">

        <comment>Update Will not affect anything by query</comment>

    <ext:updateEachItem containerName="container1">

        <ext:query>
            <!-- @formatter:off -->
            {
                "query" : "SELECT * FROM c WHERE c.id &gt; @id",
                "parameters" : [
                    {
                    "name" : "@id",
                    "value" : "3"
                    }
                ]
            }
            <!-- @formatter:on -->
        </ext:query>

        <ext:document>
            <!-- @formatter:off -->
            {
                "changedField" : "Unaffected Changed",
            }
            <!-- @formatter:on -->
        </ext:document>

    </ext:updateEachItem>

</changeSet>

</databaseChangeLog>
