<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="1" author="alex">
        <comment>Create container</comment>

        <ext:createContainer containerId="deleteEachContainer1"/>

    </changeSet>

    <changeSet id="2" author="alex">

        <comment>Insert three items</comment>

        <ext:createItem containerId="deleteEachContainer1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "1",
                    "name" : "To Be Deleted"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

        <ext:createItem containerId="deleteEachContainer1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "2",
                    "name" : "Not To Be Deleted"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

        <ext:createItem containerId="deleteEachContainer1">
            <ext:document>
                <!-- @formatter:off -->
                {
                    "id" : "3",
                    "name" : "To Be Deleted"
                }
                <!-- @formatter:on -->
            </ext:document>
        </ext:createItem>

    </changeSet>

    <changeSet id="3" author="alex">

        <comment>Delete each item by query</comment>

        <ext:deleteEachItem containerId="deleteEachContainer1">

            <ext:query>
                <!-- @formatter:off -->
                {
                    "query" : "SELECT * FROM c WHERE c.name = @name",
                    "parameters" : [
                        {
                            "name" : "@name",
                            "value" : "To Be Deleted"
                        }
                    ]
                }
                <!-- @formatter:on -->
            </ext:query>

        </ext:deleteEachItem>

    </changeSet>

</databaseChangeLog>
